    <groupId>net.vpc.upa.upa-tutorial</groupId>
    <artifactId>upa-tutorial</artifactId>
    <version>1.2.0</version>
    <name>net.vpc.upa.upa-tutorial</name>
    <packaging>pom</packaging>
    <url>https://github.com/thevpc/upa/wiki</url>

    <organization>
        <name>vpc open source initiative</name>
        <url>http://tahabensalah.net</url>
    </organization>

    <developers>
        <developer>
            <id>vpc</id>
            <name>Taha Ben Salah</name>
