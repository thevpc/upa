<?xml version="1.0" encoding="UTF-8"?>
<actions>
        <action>
            <actionName>run</actionName>
            <goals>
                <goal>process-classes</goal>
                <goal>org.codehaus.mojo:exec-maven-plugin:1.2.1:exec</goal>
            </goals>
            <properties>
                <exec.args>-Xms2G -Xmx5G -classpath %classpath net.vpc.upa.impl.bulk.DefaultExcelDataReader</exec.args>
                <exec.executable>java</exec.executable>
            </properties>
        </action>
        <action>
            <actionName>debug</actionName>
            <goals>
                <goal>process-classes</goal>
                <goal>org.codehaus.mojo:exec-maven-plugin:1.2.1:exec</goal>
            </goals>
            <properties>
                <exec.args>-Xdebug -Xrunjdwp:transport=dt_socket,server=n,address=${jpda.address} -Xms2G -Xmx5G -classpath %classpath net.vpc.upa.impl.bulk.DefaultExcelDataReader</exec.args>
                <exec.executable>java</exec.executable>
                <jpda.listen>true</jpda.listen>
            </properties>
        </action>
        <action>
            <actionName>profile</actionName>
            <goals>
                <goal>process-classes</goal>
                <goal>org.codehaus.mojo:exec-maven-plugin:1.2.1:exec</goal>
            </goals>
            <properties>
                <exec.args>${profiler.args} -Xms2G -Xmx5G -classpath %classpath net.vpc.upa.impl.bulk.DefaultExcelDataReader</exec.args>
                <exec.executable>${profiler.java}</exec.executable>
            </properties>
        </action>
        <action>
            <actionName>CUSTOM-site</actionName>
            <displayName>site deploy</displayName>
            <goals>
                <goal>site</goal>
                <goal>deploy</goal>
            </goals>
        </action>
    </actions>
